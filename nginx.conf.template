events {
    worker_connections 16;
}

http {
    server {
        listen 80;
        server_name localhost;

        # Use Docker's internal DNS resolver
        resolver 127.0.0.11 valid=120s;

        extra_hosts:
            - ${PROXY_PASS_URL}:{PROXY_PASS_IP}

        location / {
            proxy_pass ${PROXY_PASS_URL};
        }
    }
}
