events {
    worker_connections 16;
}

http {
    upstream app {
        server localhost:8080/;
        server ${PROXY_PASS_URL} backup;
    }
    server {
        listen 80;

        location / {
            proxy_pass http://app;
            proxy_connect_timeout 1s;
            proxy_read_timeout 1s;
        }

    }
}
